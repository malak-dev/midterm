<body>
  <%- include('./partials/header.ejs')%>
  <h3>My List</h3>
  <table class="table">
    <thead>
      <tr>
        <th scope="col"> Name</th>
        <th cope="col">Date</thscope="col">
        <th scope="col">Edit</th>
      </tr>
    </thead>
    <% for(let list in lists) {%>
    <tr>
      <td><%=  lists[list].item %></td>
      <td><%= lists[list].date_trunc %></td>

      <form method="GET" action="/list/<%= list %>">
        <td> <button type="submit" id="edit">Edit</button></td>
        <p id="alert_message"></p>
      </form>
    </tr>
    <% }%>

  </table>
</body>
